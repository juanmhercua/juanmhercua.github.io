<body>

<form>
<fieldset>
<legend>Completar estas opciones</legend>

	<label for="file">Elija un fichero: </label>
	<input type="file" id="file" value="file">
	<br>
	
	<input type="radio" id="jpg" value="jpg">
	<label for="jpg">JPG</label>	
	<br>
	<input type="radio" id="png" value="png">
	<label for="png">PNG</label>	
	<br>
	
	<label for="nombre">Nombre</label>
	<input type="text" id="nombre">
	
	<label for="apellidos">Apellidos</label>
	<input type="text" id="apellidos">
	<br>
	
	</fieldset>
	<fieldset>
	<legend>Indique</legend>
	
	<input type="checkbox" id="tarjeta">
	<label for="tarjeta">Tarjeta aceleradora</label>
	<br>
	<input type="checkbox" id="monitor">
	<label for="monitor">Monitor LED</label>
	<br>
	<input type="checkbox" id="ssd">
	<label for="ssd">SSD</label>
	<br>

	<label for="date">Elija una fecha: </label>
	<input type="date" id="date">
	<br>
	<label for="color">Elija un color: </label>
	<input type="color" id="color">
	<br>
	<label for="file">Elija un fichero</label>
	<input type="file" id="file">
	<br>

	<textarea cols="30" rows="10">Inserte aquí el texto</textarea>
	<br>
	<br>
	<input type="submit">
</fieldset>
</form>

</body>
